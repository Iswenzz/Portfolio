{
    "parser": "babel-eslint",
    "env": 
    {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "rules": 
    {
        "brace-style": 
        [
            "error",
            "allman", { "allowSingleLine": true }
        ],
        "quotes": 
        [
            "error",
            "double"
        ]
    },
    "parserOptions": 
    {
        "sourceType": "module"
    }
}